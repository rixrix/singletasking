<% layout('layouts/default.ejs') -%>

<div ng-controller="MainController">
    <div class="row">
        <form class="bs-example bs-example-form">
            <div class="row">
                <div class="col-lg-12">
                    <input type="text" class="form-control input-lg" ng-model="newTask" placeholder="What are you doing?" st-newtask="newTaskInputField">
                </div><!-- /.col-lg-12 -->
            </div><!-- /.row -->
        </form>
    </div>

    <br />
    <div class="row">
        <div class="panel">
            <!-- Default panel contents -->
            <!-- Table -->
            <table class="table table-hover">
                <thead>
                <tr class="warning">
                    <th style="width: 120px;"><a href="#" class="btn btn-xs btn-default" role="button" ng-click="removeTasks()">Delete Selected</a></th>
                    <th>Task</th>
                    <th>Time Start</th>
                    <th>Time End</th>
                    <th>Duration</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="task in list">
                    <td align="center">
                        <input type="checkbox" ng-click="updateSelection(task._id)" />
                    </td>
                    <td><a href="#" editable-text="task.name">{{task.name}}</a></td>
                    <td>{{task.start_date | date: 'hh:mm:ss a'}} </td>
                    <td>{{task.end_date | date: 'hh:mm:ss a'}}</td>
                    <td>{{task.duration}}</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>
</div> <!-- controller holder -->